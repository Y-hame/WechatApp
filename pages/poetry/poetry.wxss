.container {
    padding: 30rpx;
    background-color: #f5f5f5;
    min-height: 100vh;
}

.poetry-card {
    background: #fff;
    border-radius: 16rpx;
    padding: 40rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
    margin-bottom: 40rpx;
}

.poetry-title {
    font-size: 40rpx;
    font-weight: bold;
    color: #333;
    text-align: center;
    display: block;
    margin-bottom: 20rpx;
}

.poetry-author {
    font-size: 28rpx;
    color: #666;
    text-align: center;
    display: block;
    margin-bottom: 40rpx;
}

.poetry-content {
    padding: 30rpx 0;
    border-top: 2rpx solid #eee;
    border-bottom: 2rpx solid #eee;
    margin-bottom: 30rpx;
}

.poetry-content text {
    font-size: 32rpx;
    color: #333;
    line-height: 1.8;
    display: block;
    text-align: center;
    font-family: "KaiTi", "楷体", serif;
}

.poetry-explanation {
    background: #f8f8f8;
    padding: 20rpx;
    border-radius: 8rpx;
}

.explanation-title {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 16rpx;
    display: block;
    font-weight: bold;
}

.explanation-content {
    font-size: 28rpx;
    color: #666;
    line-height: 1.6;
    display: block;
}

.control-buttons {
    display: flex;
    justify-content: space-between;
    padding: 0 40rpx;
}

.btn {
    width: 240rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background: #1aad19;
    color: #fff;
    border-radius: 40rpx;
    font-size: 28rpx;
    border: none;
}

.btn:active {
    opacity: 0.8;
}

/* 添加按钮禁用状态样式 */
.btn[disabled] {
    background: #cccccc;
    opacity: 0.6;
}

/* 添加优雅的过渡动画 */
.poetry-card {
    transition: all 0.3s ease;
}

.poetry-card:active {
    transform: scale(0.98);
}

/* 在现有样式的基础上添加以下内容 */

.search-box {
    position: relative;
    margin-bottom: 30rpx;
}

.search-input {
    background: #fff;
    height: 80rpx;
    border-radius: 40rpx;
    padding: 0 80rpx 0 30rpx;
    font-size: 28rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
    position: absolute;
    right: 30rpx;
    top: 50%;
    transform: translateY(-50%);
    color: #999;
}

.search-result-tip {
    font-size: 24rpx;
    color: #666;
    margin-bottom: 20rpx;
    padding: 0 20rpx;
}

/* 添加无结果提示样式 */
.no-result {
    text-align: center;
    padding: 40rpx;
    color: #999;
    font-size: 28rpx;
}

/* 搜索区域样式 */
.search-section {
    padding: 20rpx 30rpx;
    background: #fff;
    position: sticky;
    top: 0;
    z-index: 100;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-box {
    display: flex;
    align-items: center;
    background: #f5f5f5;
    padding: 15rpx 20rpx;
    border-radius: 30rpx;
}

.search-input {
    flex: 1;
    margin-left: 20rpx;
    font-size: 28rpx;
}

/* 诗词卡片样式 */
.poetry-card {
    margin: 30rpx;
    background: #fff;
    border-radius: 20rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
    overflow: hidden;
}

.poetry-header {
    padding: 40rpx 30rpx;
    text-align: center;
    border-bottom: 1rpx solid #eee;
}

.poetry-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    display: block;
    margin-bottom: 20rpx;
}

.poetry-author {
    font-size: 28rpx;
    color: #666;
}

.poetry-content {
    padding: 40rpx;
    text-align: center;
    font-size: 32rpx;
    line-height: 1.8;
    color: #333;
    background: #fafafa;
}

/* 注释和赏析区域 */
.poetry-notes {
    padding: 30rpx;
}

.section-title {
    font-size: 30rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 20rpx;
    display: block;
}

.note-item {
    margin-bottom: 15rpx;
    font-size: 28rpx;
    line-height: 1.6;
}

.note-word {
    color: #1aad19;
    font-weight: bold;
}

.note-explanation {
    color: #666;
}

.appreciation-section {
    margin-top: 30rpx;
    padding-top: 30rpx;
    border-top: 1rpx solid #eee;
}

.appreciation-content {
    font-size: 28rpx;
    line-height: 1.8;
    color: #666;
}

/* 操作按钮 */
.action-buttons {
    display: flex;
    padding: 20rpx 30rpx;
    border-top: 1rpx solid #eee;
}

.action-btn {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    background: none;
    border: none;
    font-size: 28rpx;
    color: #666;
    padding: 20rpx;
}

.action-btn::after {
    border: none;
}

.btn-icon {
    width: 36rpx;
    height: 36rpx;
    margin-right: 10rpx;
}

/* 翻页按钮 */
.control-buttons {
    display: flex;
    justify-content: space-between;
    padding: 30rpx;
    margin-top: 20rpx;
}

.btn {
    width: 240rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background: #1aad19;
    color: #fff;
    border-radius: 40rpx;
    font-size: 28rpx;
}

.btn[disabled] {
    background: #ccc;
    color: #fff;
}